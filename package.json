{
  "name": "pos-app",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "homepage": "https://hasaruariyaratne.github.io/my-family-nurse-app/",
  "scripts": {
    "dev": "vite",
    "dev:admin": "cd sawbhavi-unified/admin-dashboard && npm run dev",
    "dev:store": "cd online-store && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:admin\" \"npm run dev:store\" --names \"POS,Admin,Store\" --prefix-colors \"cyan,magenta,green\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/supabase-js": "^2.89.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "framer-motion": "^12.23.24",
    "html2pdf.js": "^0.12.1",
    "idb": "^8.0.3",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.555.0",
    "next-themes": "^0.4.6",
    "open": "^11.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-draggable": "^4.5.0",
    "react-router-dom": "^7.9.6",
    "recharts": "^3.5.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@tanstack/react-virtual": "^3.13.13",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.3.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^6.4.1",
    "vitest": "^4.0.15",
    "xlsx": "^0.18.5",
    "zod": "^4.1.13"
  },
  "build": {
    "appId": "com.sawbhavi.pos",
    "productName": "Sawbhavi POS",
    "directories": {
      "output": "release_v2"
    },
    "win": {
      "target": "nsis",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}